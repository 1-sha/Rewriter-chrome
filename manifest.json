{
  "manifest_version": 2,

  "name": "Rewriter",
  "description": "Rewrite the content of a webpage using user-defined rules.",
  "version": "1.0",

  "icons": {  "24": "image/icon24.png",
              "32": "image/icon32.png",
              "48": "image/icon48.png",
              "64": "image/icon64.png",
              "128": "image/icon128.png" },
  "content_scripts":[
    {
      "matches":[
          "<all_urls>"
        ],
      "js": ["content-script/Rewriter.js"]
    }
    ],
    "permissions": [
          "storage"
        ]
}